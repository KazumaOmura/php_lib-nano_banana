{
    "name": "youcast/nano-banana-client",
    "description": "Google Gemini APIを使用して画像を生成するPHPライブラリ",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "KazumaOmura",
            "email": "omurakazuma.info@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "illuminate/support": "^9.0|^10.0|^11.0",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0|^10.0",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "YouCast\\NanoBanana\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "YouCast\\NanoBanana\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse",
        "cs-check": "phpcs --standard=PSR12 src/",
        "cs-fix": "phpcbf --standard=PSR12 src/"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
